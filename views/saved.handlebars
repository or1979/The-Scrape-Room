<div class="modal fade" tabindex="-1" role="dialog" id="note-modal">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content container">
            <div class="modal-header">
                <h5 class="modal-title">Note for article</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body" id="display-notes">
                
            </div>
            <textarea placeholder="New Note" rows="4" cols="60"></textarea>
            <div class="modal-footer">
                <button type="button" class="btn btn-success save-note-btn">Save Note</button>
            </div>
        </div>
    </div>
</div>

<div class="jumbotron jumbotron-fluid text-center">
    <div class="container">
        <h1 class="display-4 pt-5 mt-5">Saved Articles</h1>
        <p class="lead">Your Saved Articles</p>
    </div>
</div>


<div class="container">
    {{#each articles}}
    <div class="card m-3">
        <div class="card-header">
            <a href="{{link}}" target="_blank" class="title">{{title}}</a>
            <a href="/delete" class="btn btn-danger delete-btn" data-id="{{_id}}">Delete From Saved</a>
            <a href="#" class="btn btn-warning note-btn" data-id="{{_id}}">Article Notes</a>
        </div>
        <div class="card-body">
            <p class="card-text">{{summary}}</p>
        </div>
    </div>
    {{/each}}